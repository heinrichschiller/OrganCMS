{
    "name": "heinrichschiller/organcms",
    "description": "CMS f√ºr die Orgelfreunde",
    "type": "project",
    "homepage": "https://github.com/heinrichschiller/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Heinrich Schiller",
            "email": "info@heinrich-schiller.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "slim/slim": "4.11.0",
        "slim/psr7": "1.6",
        "php-di/php-di": "6.4.0",
        "vlucas/phpdotenv": "5.5.0",
        "monolog/monolog": "2.8.0",
        "symfony/console": "6.1.7",
        "heinrichschiller/slim4-mustache-view": "dev-main",
        "odan/session": "5.1.0",
        "phpmailer/phpmailer": "6.6.5",
        "cakephp/validation": "4.4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.26",
        "symfony/var-dumper": "6.1.6",
        "phpstan/phpstan": "1.9.2",
        "squizlabs/php_codesniffer": "3.7.1",
        "selective/test-traits": "2.2.0"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "test:phpstan": "phpstan analyse",
        "test:phpunit": "phpunit --configuration phpunit.xml --colors=always",
        "test:phpcs": "phpcs --standard=phpcs.xml",
        "test:phpcbf": "phpcbf --standard=phpcs.xml",
        "test:all" : [
            "@test:phpstan",
            "@test:phpunit",
            "@test:phpcs",
            "@test:phpcbf"
        ],
        "test:coverage": "phpdbg -qqr vendor/bin/phpunit --configuration phpunit.xml --colors=always --coverage-html code-coverage"
    }
}
