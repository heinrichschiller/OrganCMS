{
    "name": "heinrichschiller/slim-organcms",
    "description": "CMS f√ºr die Orgelfreunde Plauen",
    "type": "project",
    "homepage": "https://github.com/heinrichschiller/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Heinrich Schiller",
            "email": "info@heinrich-schiller.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "slim/slim": "4.15.0",
        "php-di/php-di": "7.1.1",
        "php-di/slim-bridge": "3.4.1",
        "monolog/monolog": "3.9.0",
        "nyholm/psr7": "1.8.2",
        "nyholm/psr7-server": "1.1.0",
        "fig/http-message-util": "1.1.5",
        "selective/array-reader": "2.2.0",
        "selective/basepath": "2.3.0",
        "selective/config": "1.2.0",
        "mustache/mustache": "3.0.0",
        "odan/session": "6.4.1",
        "cakephp/validation": "5.2.7",
        "doctrine/dbal": "4.3.2",
        "doctrine/migrations": "3.9.4",
        "symfony/uid": "7.3.1",
        "cocur/slugify": "4.6.0"        
    },
    "require-dev": {
        "phpunit/phpunit": "12.3.8",
        "symfony/console": "7.3.3",
        "phpstan/phpstan": "2.1.22",
        "squizlabs/php_codesniffer": "3.13.2",
        "selective/test-traits": "4.2.1",
        "symfony/var-dumper": "7.3.3",
        "dg/bypass-finals": "1.9.0"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "psr-4": {
            "App\\": "src/",
            "Migrations\\": "resources/migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "migrations": "php vendor/bin/doctrine-migrations ",
        "migrations:generate": "php vendor/bin/doctrine-migrations migrations:generate",
        "migrations:migrate": "php vendor/bin/doctrine-migrations migrations:migrate",
        "migrations:diff": "php vendor/bin/doctrine-migrations migrations:diff",
        "start": "php -S localhost:8080 -t public",
        "test:phpstan": "phpstan analyse",
        "test:phpunit": "phpunit --configuration phpunit.xml --colors=always",
        "test:phpcs": "phpcs --standard=phpcs.xml",
        "test:phpcbf": "phpcbf --standard=phpcs.xml",
        "test:all": [
            "@test:phpstan",
            "@test:phpunit",
            "@test:phpcs",
            "@test:phpcbf"
        ],
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
