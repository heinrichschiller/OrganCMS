{
    "name": "heinrichschiller/slim-organcms",
    "description": "CMS f√ºr die Orgelfreunde Plauen",
    "type": "project",
    "homepage": "https://github.com/heinrichschiller/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Heinrich Schiller",
            "email": "info@heinrich-schiller.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "slim/slim": "4.11.0",
        "php-di/php-di": "7.0.2",
        "monolog/monolog": "3.3.1",
        "nyholm/psr7": "1.5.1",
        "nyholm/psr7-server": "1.0.2",
        "fig/http-message-util": "1.1.5",
        "selective/basepath": "2.1.0",
        "mustache/mustache": "2.14.2",
        "odan/session": "6.1.0",
        "phpmailer/phpmailer": "6.7.1",
        "cakephp/validation": "4.4.11",
        "doctrine/dbal": "3.6.1",
        "doctrine/orm": "2.14.1",
        "doctrine/cache": "2.2.0",
        "symfony/uid": "6.2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "10.0.14",
        "symfony/console": "6.2.7",
        "phpstan/phpstan": "1.10.3",
        "squizlabs/php_codesniffer": "3.7.2",
        "selective/test-traits": "3.0.0",
        "symfony/var-dumper": "6.2.7"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "test:phpstan": "phpstan analyse",
        "test:phpunit": "phpunit --configuration phpunit.xml --colors=always",
        "test:phpcs": "phpcs --standard=phpcs.xml",
        "test:phpcbf": "phpcbf --standard=phpcs.xml",
        "test:all": [
            "@test:phpstan",
            "@test:phpunit",
            "@test:phpcs",
            "@test:phpcbf"
        ],
        "test:coverage": "phpdbg -qqr vendor/bin/phpunit --configuration phpunit.xml --colors=always --coverage-html code-coverage"
    }
}
